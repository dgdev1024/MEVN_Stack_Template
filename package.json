{
    "name": "vue-full-stack-template",
    "version": "1.0.0",
    "description": "A starting template for a full-stack web application using Vue.JS.",
    "author": "Dennis Griffin",
    "license": "MIT",
    "scripts": {
        "client-dev": "WEBPACK_ENV='development' webpack --progress --colors",
        "client-prod": "WEBPACK_ENV='production' webpack",
        "server-dev": "NODE_ENV='development' node server/index.js",
        "server-prod": "NODE_ENV='production' node server/index.js",
        "dev": "npm run client-dev & npm run server-dev",
        "prod": "npm run client-prod & npm run server-prod",
        "start": "npm run server-dev"
    },
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-1": "^6.24.1",
        "css-loader": "^0.28.9",
        "html-webpack-plugin": "^2.30.1",
        "node-sass": "^4.7.2",
        "sass-loader": "^6.0.6",
        "style-loader": "^0.19.1",
        "uglifyjs-webpack-plugin": "^1.1.6",
        "vue-html-loader": "^1.2.4",
        "vue-loader": "^13.7.0",
        "vue-template-compiler": "^2.5.13",
        "webpack": "^3.10.0"
    },
    "dependencies": {
        "body-parser": "^1.18.2",
        "express": "^4.16.2",
        "vue": "^2.5.13",
        "vue-router": "^3.0.1"
    }
}
